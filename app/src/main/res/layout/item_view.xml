<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CourseName"
        android:id="@+id/tvCourse"
        android:inputType="none"
        android:editable="false"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Assessment"
        android:id="@+id/tvAssessment"
        android:inputType="none"
        android:editable="false"
        android:textIsSelectable="false"
        android:layout_below="@+id/tvCourse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="marks"
        android:id="@+id/tvMarksObt"
        android:layout_below="@+id/tvAssessment"
        android:inputType="none"
        android:editable="false"
        android:textIsSelectable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="/"
        android:id="@+id/textView6"
        android:layout_below="@+id/tvAssessment"
        android:inputType="none"
        android:editable="false"
        android:textIsSelectable="false"
        android:layout_toRightOf="@+id/tvMarksObt"
        android:layout_toEndOf="@+id/tvMarksObt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="total"
        android:id="@+id/tvTotal"
        android:layout_below="@+id/tvAssessment"
        android:inputType="none"
        android:editable="false"
        android:textIsSelectable="false"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="comment"
        android:id="@+id/tvComment"
        android:layout_below="@+id/tvMarksObt"
        android:inputType="textNoSuggestions"
        android:editable="false"
        android:textIsSelectable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/EditBtn"
        android:layout_alignBottom="@+id/tvAssessment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        style="@style/TextAppearance.AppCompat.Widget.Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteBtn"
        android:layout_below="@+id/EditBtn"
        android:layout_alignLeft="@+id/EditBtn"
        android:layout_alignStart="@+id/EditBtn"
        android:layout_alignRight="@+id/EditBtn"
        android:layout_alignEnd="@+id/EditBtn" />

</RelativeLayout>